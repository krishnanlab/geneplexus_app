{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workflows_geneplexus_runmodel_name": {
            "defaultValue": "geneplexus-runmodel",
            "type": "String"
        },
        "containerGroups___encodeURIComponent_concat__geneplexus___triggerBody_____envvars_____JOBNAME______externalid": {
            "type": "String"
        },
        "connections_aci_externalid": {
            "type": "String"
        },
        "azlocation": {
            "defaultValue": "centralus",
            "type": "String"
        },
        "connection_id": {
            "type": "String"
        }

    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('workflows_geneplexus_runmodel_name')]",
            "location": "[parameters('azlocation')]",
            "tags": {
                "created_by": "billspat",
                "project": "krishnanlab-geneplexus",
                "status": "dev"
            },
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "manual": {
                            "type": "Request",
                            "kind": "Http",
                            "inputs": {
                                "schema": {
                                    "properties": {
                                        "aciName": {
                                            "type": "string"
                                        },
                                        "cpu": {
                                            "type": "number"
                                        },
                                        "envvars": {
                                            "properties": {
                                                "DATA_PATH": {
                                                    "type": "string"
                                                },
                                                "FLASK_DEBUG": {
                                                    "type": "boolean"
                                                },
                                                "FLASK_ENV": {
                                                    "type": "string"
                                                },
                                                "GENE_FILE": {
                                                    "type": "string"
                                                },
                                                "GP_FEATURES": {
                                                    "type": "string"
                                                },
                                                "GP_GSC": {
                                                    "type": "string"
                                                },
                                                "GP_NET_TYPE": {
                                                    "type": "string"
                                                },
                                                "JOBNAME": {
                                                    "type": "string"
                                                },
                                                "JOB_PATH": {
                                                    "type": "string"
                                                },
                                                "OUTPUT_FILE": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "image": {
                                            "properties": {
                                                "imageName": {
                                                    "type": "string"
                                                },
                                                "registry": {
                                                    "properties": {
                                                        "password": {
                                                            "type": "string"
                                                        },
                                                        "server": {
                                                            "type": "string"
                                                        },
                                                        "username": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "location": {
                                            "type": "string"
                                        },
                                        "memoryInGB": {
                                            "type": "number"
                                        },
                                        "volumeMount": {
                                            "properties": {
                                                "mountPath": {
                                                    "type": "string"
                                                },
                                                "name": {
                                                    "type": "string"
                                                },
                                                "readOnly": {
                                                    "type": "boolean"
                                                },
                                                "shareName": {
                                                    "type": "string"
                                                },
                                                "shareReadOnly": {
                                                    "type": "boolean"
                                                },
                                                "storageAccountKey": {
                                                    "type": "string"
                                                },
                                                "storageAccountName": {
                                                    "type": "string"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            },
                            "conditions": []
                        }
                    },
                    "actions": {
                        "Create_or_update_a_container_group": {
                            "runAfter": {},
                            "type": "ApiConnection",
                            "inputs": {
                                "body": {
                                    "location": "[parameters('azlocation')]",
                                    "properties": {
                                        "containers": [
                                            {
                                                "name": "@{concat('geneplexus-container-',triggerBody()?['envvars']?['JOBNAME'])}",
                                                "properties": {
                                                    "environmentVariables": [
                                                        {
                                                            "name": "FLASK_ENV",
                                                            "value": "@triggerBody()?['envvars']?['FLASK_ENV']"
                                                        },
                                                        {
                                                            "name": "GP_NET_TYPE",
                                                            "value": "@triggerBody()?['envvars']?['GP_NET_TYPE']"
                                                        },
                                                        {
                                                            "name": "GP_FEATURES",
                                                            "value": "@triggerBody()?['envvars']?['GP_FEATURES']"
                                                        },
                                                        {
                                                            "name": "GP_GSC",
                                                            "value": "@triggerBody()?['envvars']?['GP_GSC']"
                                                        },
                                                        {
                                                            "name": "JOBNAME",
                                                            "value": "@triggerBody()?['envvars']?['JOBNAME']"
                                                        },
                                                        {
                                                            "name": "DATA_PATH",
                                                            "value": "@triggerBody()?['envvars']?['DATA_PATH']"
                                                        },
                                                        {
                                                            "name": "GENE_FILE",
                                                            "value": "@triggerBody()?['envvars']?['GENE_FILE']"
                                                        },
                                                        {
                                                            "name": "OUTPUT_FILE",
                                                            "value": "@triggerBody()?['envvars']?['OUTPUT_FILE']"
                                                        },
                                                        {
                                                            "name": "JOB_PATH",
                                                            "value": "@triggerBody()?['envvars']?['JOB_PATH']"
                                                        }
                                                    ],
                                                    "image": "@triggerBody()?['image']?['imageName']",
                                                    "resources": {
                                                        "requests": {
                                                            "cpu": "@triggerBody()?['cpu']",
                                                            "memoryInGB": "@triggerBody()?['memoryInGB']"
                                                        }
                                                    },
                                                    "volumeMounts": [
                                                        {
                                                            "mountPath": "@triggerBody()?['volumeMount']?['mountPath']",
                                                            "name": "@triggerBody()?['volumeMount']?['name']",
                                                            "readOnly": false
                                                        }
                                                    ]
                                                }
                                            }
                                        ],
                                        "imageRegistryCredentials": [
                                            {
                                                "password": "@triggerBody()?['image']?['registry']?['password']",
                                                "server": "@triggerBody()?['image']?['registry']?['server']",
                                                "username": "@triggerBody()?['image']?['registry']?['username']"
                                            }
                                        ],
                                        "osType": "Linux",
                                        "restartPolicy": "Never",
                                        "sku": "Standard",
                                        "volumes": [
                                            {
                                                "azureFile": {
                                                    "readOnly": false,
                                                    "shareName": "@triggerBody()?['volumeMount']?['shareName']",
                                                    "storageAccountKey": "@triggerBody()?['volumeMount']?['storageAccountKey']",
                                                    "storageAccountName": "@triggerBody()?['volumeMount']?['storageAccountName']"
                                                },
                                                "name": "@triggerBody()?['volumeMount']?['name']"
                                            }
                                        ]
                                    }
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['aci']['connectionId']"
                                    }
                                },
                                "method": "put",
                                "path": "[parameters('containerGroups___encodeURIComponent_concat__geneplexus___triggerBody_____envvars_____JOBNAME______externalid')]",
                                "queries": {
                                    "x-ms-api-version": "2019-12-01"
                                }
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "aci": {
                                "connectionId": "[parameters('connections_aci_externalid')]",
                                "connectionName": "aci",
                                "id": "[parameters('connection_id')]" // "/subscriptions/aa32e19c-49b5-478c-af56-fc710b1a8a1c/providers/Microsoft.Web/locations/northcentralus/managedApis/aci"
                            }
                        }
                    }
                }
            }
        }
    ]
}