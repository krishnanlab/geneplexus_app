{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "connections_aci_name": {
            "defaultValue": "aci",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[parameters('connections_aci_name')]",
            "location": "<<LOCATION NAME>>",
            "kind": "V1",
            "properties": {
                "displayName": "<<AZURE EMAIL ADDRESS>>",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/<<SUBSCRIPTIONID>>/providers/Microsoft.Web/locations/<<LOCATIONAME>>/managedApis/', parameters('connections_aci_name'))]"
                }
            }
        }
    ]
}